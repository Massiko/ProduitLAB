@page
@model ProduitLAB.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Identifiant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Identifiant)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.LibelleCourt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.LibelleCourt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.LibelleLong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.LibelleLong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Famille)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Famille)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.DateCreate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.DateCreate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.DateCom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.DateCom)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th scope="col">Libéllé</th>
                    <th scope="col">Assureur</th>
                </tr>
                @foreach (var item in Model.Produit.LienGPs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.GarantieP.Libelle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Assureur)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th scope="col">Payeur</th>
                    <th scope="col">Paiement</th>
                </tr>
                @foreach (var item in Model.Produit.LienCPs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CotisationP.Payeur)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CotisationP.Paiement)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Produit.ProduitID">Edit</a> |
    <a asp-page="./Index">Retour à la liste</a>
</div>
